{
    "name": "save-editors-layout",
    "displayName": "Save Editors Layout",
    "description": "save opened editors layout",
    "version": "3.0.0",
    "publisher": "ctf0",
    "repository": "https://github.com/ctf0/vscode-save-editor-layout",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/main",
    "contributes": {
        "configuration": {
            "title": "Save Editor Layout",
            "type": "object",
            "properties": {
                "saveEditorLayout.list": {
                    "type": "array",
                    "default": [],
                    "description": "Saved layout snapshots",
                    "items": {
                        "type": "object",
                        "properties": {
                            "file": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "editor-layouts",
                    "title": "Save Editor Layout",
                    "icon": "img/icon.svg"
                }
            ]
        },
        "views": {
            "editor-layouts": [
                {
                    "id": "layouts_list",
                    "name": "List",
                    "icon": "img/icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "editorLayout.saveSnapshot",
                "title": "Save Editor Layout: Save Snapshot"
            },
            {
                "command": "editorLayout.restoreSnapshot",
                "title": "Save Editor Layout: Restore Snapshot"
            },
            {
                "command": "editorLayout.deleteSnapshot",
                "title": "Save Editor Layout: Delete Snapshot",
                "icon": "$(trash)"
            }
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "editorLayout.deleteSnapshot",
                    "when": "view == layouts_list && viewItem == snapshot",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --pure:console.log --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --external:sqlite3 --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
        "watch": "npm run esbuild"
    },
    "devDependencies": {
        "@types/node": "^24.2.1",
        "@types/vscode": "^1.100.0",
        "esbuild": "^0.25.9",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "find-up": "^7.0.0"
    }
}
