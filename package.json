{
    "name": "save-editors-layout",
    "displayName": "Save Editors Layout",
    "description": "save opened editors layout",
    "version": "0.0.4",
    "publisher": "ctf0",
    "repository": "https://github.com/ctf0/vscode-save-editor-layout",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:layouts_list",
        "onCommand:editorLayout.save",
        "onCommand:editorLayout.open",
        "onCommand:editorLayout.remove",
        "onCommand:editorLayout.update"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "editorLayout.save",
                "title": "Editor Layout: save group",
                "icon": "$(references)"
            },
            {
                "command": "editorLayout.open",
                "title": "Editor Layout: open group",
                "icon": "$(telescope)"
            },
            {
                "command": "editorLayout.remove",
                "title": "Editor Layout: remove group"
            },
            {
                "command": "editorLayout.update",
                "title": "Editor Layout: update group"
            },
            {
                "command": "editorLayout.openFile",
                "title": "Editor Layout: open file"
            },
            {
                "command": "editorLayout.treeRemove",
                "title": "Editor Layout: remove group/file",
                "icon": "$(chrome-close)"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "editorLayout.save",
                    "when": "editorIsOpen"
                },
                {
                    "command": "editorLayout.update",
                    "when": "editorIsOpen"
                },
                {
                    "command": "editorLayout.openFile",
                    "when": "false"
                },
                {
                    "command": "editorLayout.treeRemove",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "editorLayout.open",
                    "when": "view == layouts_list",
                    "group": "navigation"
                },
                {
                    "command": "editorLayout.save",
                    "when": "view == layouts_list && editorIsOpen",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "editorLayout.treeRemove",
                    "when": "view == layouts_list",
                    "group": "inline"
                }
            ]
        },
        "configuration": {
            "title": "Editor Layout",
            "type": "object",
            "properties": {
                "editorLayout.list": {
                    "type": "array",
                    "default": [],
                    "description": "groups"
                },
                "editorLayout.saveToGlobal": {
                    "type": "boolean",
                    "default": false,
                    "description": "save groups globally or per workspace"
                },
                "editorLayout.closeEditorsAfterSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "close all opened editors after saving a group"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "editor-layouts",
                    "title": "Editor Layout Groups",
                    "icon": "img/icon.svg"
                }
            ]
        },
        "views": {
            "editor-layouts": [
                {
                    "id": "layouts_list",
                    "name": "List"
                }
            ]
        }
    },
    "scripts": {
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.41.0",
        "eslint": "^6.6.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "typescript": "^3.6.4",
        "vscode-test": "^1.2.2"
    }
}
