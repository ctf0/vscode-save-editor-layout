{
    "name": "save-editors-layout",
    "displayName": "Save Editors Layout",
    "description": "save opened editors layout",
    "version": "0.0.8",
    "publisher": "ctf0",
    "repository": "https://github.com/ctf0/vscode-save-editor-layout",
    "engines": {
        "vscode": "^1.41.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:layouts_list",
        "onCommand:editorLayout.save",
        "onCommand:editorLayout.open",
        "onCommand:editorLayout.remove",
        "onCommand:editorLayout.update"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "editorLayout.save",
                "title": "save group",
                "category": "Editor Layout",
                "icon": "$(references)"
            },
            {
                "command": "editorLayout.open",
                "title": "open group",
                "category": "Editor Layout",
                "icon": "$(symbol-array)"
            },
            {
                "command": "editorLayout.remove",
                "title": "remove group",
                "category": "Editor Layout"
            },
            {
                "command": "editorLayout.update",
                "title": "update group",
                "category": "Editor Layout"
            },
            {
                "command": "editorLayout.openFile",
                "title": "open file",
                "category": "Editor Layout"
            },
            {
                "command": "editorLayout.treeRemove",
                "title": "remove group/file",
                "icon": "$(chrome-close)"
            },
            {
                "command": "editorLayout.columnBelow",
                "title": "open editor in below_group",
                "icon": "$(chevron-down)"
            },
            {
                "command": "editorLayout.columnAbove",
                "title": "open editor in above_group",
                "icon": "$(chevron-up)"
            },
            {
                "command": "editorLayout.columnRight",
                "title": "open editor in right_group",
                "icon": "$(chevron-right)"
            },
            {
                "command": "editorLayout.columnLeft",
                "title": "open editor in left_group",
                "icon": "$(chevron-left)"
            },
            {
                "command": "editorLayout.closeAll",
                "title": "close all opened editors",
                "icon": "$(close-all)"
            },
            {
                "command": "editorLayout.openSettingsFile",
                "title": "open settings file",
                "category": "Editor Layout",
                "icon": "$(settings-gear)"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "editorLayout.save",
                    "when": "editorIsOpen"
                },
                {
                    "command": "editorLayout.update",
                    "when": "editorIsOpen"
                },
                {
                    "command": "editorLayout.openFile",
                    "when": "false"
                },
                {
                    "command": "editorLayout.treeRemove",
                    "when": "false"
                },
                {
                    "command": "editorLayout.columnBelow",
                    "when": "false"
                },
                {
                    "command": "editorLayout.columnAbove",
                    "when": "false"
                },
                {
                    "command": "editorLayout.columnRight",
                    "when": "false"
                },
                {
                    "command": "editorLayout.columnLeft",
                    "when": "false"
                },
                {
                    "command": "editorLayout.closeAll",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "editorLayout.open",
                    "when": "view == layouts_list",
                    "group": "navigation"
                },
                {
                    "command": "editorLayout.save",
                    "when": "view == layouts_list && editorIsOpen",
                    "group": "navigation"
                },
                {
                    "command": "editorLayout.closeAll",
                    "when": "view == layouts_list && editorIsOpen",
                    "group": "navigation"
                },
                {
                    "command": "editorLayout.openSettingsFile",
                    "when": "view == layouts_list",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "editorLayout.treeRemove",
                    "when": "view == layouts_list",
                    "group": "inline"
                },
                {
                    "command": "editorLayout.columnBelow",
                    "when": "view == layouts_list && viewItem == child",
                    "group": "inline"
                },
                {
                    "command": "editorLayout.columnAbove",
                    "when": "view == layouts_list && viewItem == child",
                    "group": "inline"
                },
                {
                    "command": "editorLayout.columnRight",
                    "when": "view == layouts_list && viewItem == child",
                    "group": "inline"
                },
                {
                    "command": "editorLayout.columnLeft",
                    "when": "view == layouts_list && viewItem == child",
                    "group": "inline"
                }
            ]
        },
        "configuration": {
            "title": "Editor Layout",
            "type": "object",
            "properties": {
                "editorLayout.list": {
                    "type": "array",
                    "default": [],
                    "description": "groups"
                },
                "editorLayout.saveToGlobal": {
                    "type": "boolean",
                    "default": false,
                    "description": "save groups globally or per workspace"
                },
                "editorLayout.closeEditorsAfterSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "close all opened editors after saving a group"
                },
                "editorLayout.hideSideBarAfterOpen": {
                    "type": "boolean",
                    "default": true,
                    "description": "close sidebar after opening a layout"
                },
                "editorLayout.layingOutType": {
                    "type": "string",
                    "default": "create_then_move",
                    "enum": [
                        "create_then_move",
                        "move_to_available"
                    ],
                    "description": "chose how you want the positioning to take place",
                    "enumDescriptions": [
                        "run 'workbench.action.newGroup' before opening the file",
                        "run 'workbench.action.moveEditorTo' after opening the file"
                    ]
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "editor-layouts",
                    "title": "Editor Layout Groups",
                    "icon": "img/icon.svg"
                }
            ]
        },
        "views": {
            "editor-layouts": [
                {
                    "id": "layouts_list",
                    "name": "List"
                }
            ]
        }
    },
    "scripts": {
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.41.0",
        "eslint": "^6.6.0",
        "glob": "^7.1.5",
        "mocha": "^6.2.2",
        "typescript": "^3.6.4",
        "vscode-test": "^1.2.2"
    }
}
